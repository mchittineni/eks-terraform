# ==================== General Configuration ====================
project_name      = "AWS-Infra"
environment       = "dev"  # Options: dev, staging, production
owner_email       = "your.email@example.com"
alert_email       = "alerts@example.com"
enable_monitoring = true
enable_aws        = true

# ==================== AWS Configuration ====================
aws_region         = "us-east-1"
aws_vpc_cidr       = "10.0.0.0/16"
aws_instance_type  = "t3.medium"
aws_node_count     = 6  # Must be between 2 and 10

aws_availability_zones = [
  "us-east-1a",
  "us-east-1b",
  "us-east-1c"
]

aws_public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

aws_private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24"
]

# ==================== AWS Database Configuration ====================
aws_db_name              = "appdb"
aws_db_username          = "dbadmin"
aws_db_instance_class    = "db.t3.medium"
aws_db_allocated_storage = 100
aws_db_multi_az          = true

# ==================== Monitoring Configuration ====================
# Password must be at least 12 characters with: uppercase, lowercase, number, and special character
grafana_admin_password    = "GrafanaAdmin123!"
prometheus_retention_days = 15  # Must be between 7 and 90 days

# ==================== Common Tags ====================
common_tags = {
  Terraform = "true"
  Project   = "AWS Infrastructure"
  ManagedBy = "AWS-EKS-Terraform"
}