# ==============================================================================
# General Configuration Variables
# These variables define project metadata, ownership, and toggles.
# ==============================================================================

# Project metadata for naming and tagging resources
project_name = "AWS-Infra"

# Deployment environment (must be "dev", "staging", or "production")
environment = "staging"

# Infrastructure owner's email address (used for tagging and compliance)
owner_email = "team-lead@example.com"

# Cost tracking code for billing purposes
cost_center = "DEPT-456-PROD"

# Main toggle for provisioning AWS infrastructure
enable_aws = true


# ==============================================================================
# AWS Cloud Variables
# These variables configure AWS region, networking, and compute components.
# ==============================================================================

### Region & Networking
# AWS region to deploy resources into
aws_region = "us-east-1"

# Primary CIDR block for the entire VPC
aws_vpc_cidr = "10.0.0.0/16"

# A list of Availability Zones to use (must match CIDR list lengths)
aws_availability_zones = [
  "us-east-1a",
  "us-east-1b",
  "us-east-1c"
]

# CIDR blocks for public subnets (used for Load Balancers, NAT Gateways)
aws_public_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]

# CIDR blocks for private subnets (used for EKS nodes, RDS)
aws_private_subnet_cidrs = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24"
]


### Compute (EKS)
# EC2 instance type for EKS worker nodes
aws_instance_type = "t3.medium"

# Desired number of EKS worker nodes (must be between 2 and 10)
aws_node_count = 6


### Database (RDS)
# Name of the application database
aws_db_name = "appdb_staging"

# Master username for the RDS database (sensitive)
aws_db_username = "dbadmin"

# RDS instance class
aws_db_instance_class = "db.t3.medium"

# Allocated storage size in GB
aws_db_allocated_storage = 100

# Enable Multi-AZ deployment for high availability
aws_db_multi_az = true


# ==============================================================================
# Monitoring Variables
# These variables configure the centralized monitoring and alerting stack.
# ==============================================================================

# Main toggle for the monitoring stack
enable_monitoring = true

# Email address to receive operational alerts (e.g., SNS subscriptions)
alert_email = "alerts@example.com"

# Admin password for Grafana (sensitive - MUST meet validation criteria: >=12 chars, mixed case, numbers, special)
grafana_admin_password = "StagingGrafanaPa55!"

# Prometheus data retention period in days (7 to 90)
prometheus_retention_days = 30
